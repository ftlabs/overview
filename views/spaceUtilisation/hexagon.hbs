<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>Pretty space</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/static/css/spaceUtilisation/hexagon.css">
    <link href='https://fonts.googleapis.com/css?family=Raleway:300' rel='stylesheet' type='text/css'>
</head>

<body>
    <ul id="hexGrid">
        {{#each articles}}
        <li class="hex">
            <div class="hexIn">
                <a class="hexLink" href="#">
                    <img src="{{image}}" alt="" />
                    <h1>{{title}}</h1>
                    <p>{{ standfirst }}</p>
                </a>
            </div>
        </li>
        {{/each}}
    </ul>
</body>

</html>