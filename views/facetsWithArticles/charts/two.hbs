<!DOCTYPE html>
<html>
	{{#> chartHead title='Charts - v2' subtitle='' }}{{/chartHead}}
	<body class="two">
		<h1>Top {{facet}}</h1>
		<main class="chart--bar">

		</main>
		<fieldset class="controls">
			<legend>Controls:</legend>
			<input type="button" name="topics" id="topicsRefresh" value="Topics">
			<input type="button" name="people" id="peopleRefresh" value="People">
			<input type="button" name="organisations" id="organisationsRefresh" value="Organisations">
			<hr />
			<input type="radio" name="d3ColourSet" value="schemeDark2" checked>Dark</input><br />
			<input type="radio" name="d3ColourSet" value="schemePastel1">Pastel</input><br />
			<input type="radio" name="d3ColourSet" value="schemeGreys">Greys</input><br />
			<input type="radio" name="d3ColourSet" value="black">Black</input>
		</fieldset>
		<script src="/static/js/libs/d3.v5.js"></script>
		<script src="/static/js/charts/controls.js"></script>
		<script src="/static/js/charts/charts.js"></script>
		<script>
			var chartBuilder = new ChartBuilder('two');
			var chartData = chartBuilder.prepareData("{{data}}");
			chartBuilder.init(chartData, 'chart--bar');
			initControls('two');
		</script>
	</body>
</html>